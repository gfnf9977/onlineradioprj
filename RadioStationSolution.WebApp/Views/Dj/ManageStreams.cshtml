                    <td>
                        @if (stream.EndTime.HasValue)
                        {
                            var duration = stream.EndTime.Value - stream.StartTime;
                            <span>@duration.ToString(@"hh\:mm") –≥–æ–¥</span>
                        }
                        else
                        {
                            <span class="text-success">–¢—Ä–∏–≤–∞—î...</span>
                        }
                    </td>
                    <td>
                        @if (stream.EndTime == null)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
