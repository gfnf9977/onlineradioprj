@model IEnumerable<OnlineRadioStation.Domain.DjStream>
@{
    ViewData["Title"] = "Управління стрімами";
    bool isLive = ViewBag.IsLive ?? false;
    bool isRandom = ViewBag.IsRandom ?? false;
    var playlist = ViewBag.CurrentPlaylist as IEnumerable<OnlineRadioStation.Domain.PlaybackQueue>;
}

<div class="container">
    <h1>Управління ефіром</h1>
    <hr />
    <div class="card mb-4 text-center shadow-sm @(isLive ? "border-success" : "border-secondary")">
        <div class="card-body">
            @if (isLive)
            {
                <h2 class="text-success animate-pulse">В ЕФІРІ (ON AIR)</h2>
                <p class="text-muted">Ви зараз ведете трансляцію.</p>
                <div class="my-3 p-3 bg-light rounded border">
                    <h1 id="liveTimer" class="display-4 fw-bold text-dark" style="font-family: monospace;">00:00:00</h1>
                    <small class="text-muted">тривалість поточної сесії</small>
                </div>

                @if (isRandom)
                {
                    <div class="alert alert-info d-inline-block">
                        <i class="bi bi-shuffle"></i> Ефір у режимі Shuffle (випадковий порядок)
                    </div>
                }
                else
                {
                    <div class="alert alert-secondary d-inline-block">
                        <i class="bi bi-list-ol"></i> Ефір за порядком плейлиста
                    </div>
                }

                <form asp-action="ToggleStream" method="post" class="mt-4">
                    <input type="hidden" name="action" value="stop" />
                    <button type="submit" class="btn btn-danger btn-lg px-5">
                        ЗАВЕРШИТИ ЕФІР
                    </button>
                </form>
            }
            else
            {
                <h2 class="text-secondary">ОФЛАЙН</h2>
                <p class="text-muted">Ефір зупинено. Готові почати?</p>

                <form asp-action="ToggleStream" method="post">
                    <input type="hidden" name="action" value="start" />

                    <div class="mb-3 text-start">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="startRandom" name="startRandom" value="true">
                            <label class="form-check-label" for="startRandom">
                                Запустити у режимі Shuffle (випадковий порядок)
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success btn-lg px-5">
                        ПОЧАТИ ЕФІР
                    </button>
                </form>
            }
        </div>
    </div>

    <hr class="my-5" />

    <div class="row mb-3 align-items-center">
        <div class="col">
            <h2>Поточний ефір</h2>
            <p class="text-muted">Черга відтворення на станції.</p>
        </div>
        @if (!isLive)
        {
            
        }
    </div>

    @if (playlist != null && playlist.Any())
    {
        <div class="card shadow-sm mb-5">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 50px;">#</th>
                            <th style="width: 60px;">Сорт</th>
                            <th>Назва треку</th>
                            <th>Тривалість</th>
                            <th class="text-end">Налаштування</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int rowNum = 1; }
                        @foreach (var item in playlist)
                        {
                            string rowClass = item.IsActive ? "" : "table-secondary text-muted text-decoration-line-through";

                            <tr class="@rowClass">
                                <td class="fw-bold text-secondary">@(rowNum++)</td>

                                <td>
                                    @if (!isLive && !isRandom)
                                    {
                                        <div class="btn-group-vertical btn-group-sm">
                                            @if (item != playlist.First())
                                            {
                                                <form asp-action="ChangeStreamQueuePosition" method="post">
                                                    <input type="hidden" name="queueId" value="@item.QueueId" />
                                                    <input type="hidden" name="direction" value="up" />
                                                    <button type="submit" class="btn btn-light border py-0"><i class="bi bi-caret-up-fill"></i></button>
                                                </form>
                                            }
                                            @if (item != playlist.Last())
                                            {
                                                <form asp-action="ChangeStreamQueuePosition" method="post">
                                                    <input type="hidden" name="queueId" value="@item.QueueId" />
                                                    <input type="hidden" name="direction" value="down" />
                                                    <button type="submit" class="btn btn-light border py-0"><i class="bi bi-caret-down-fill"></i></button>
                                                </form>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>

                                <td><span class="fw-bold">@item.Track.Title</span></td>
                                <td>@item.Track.Duration.ToString(@"mm\:ss")</td>

                                <td class="text-end">
                                    @if (isLive)
                                    {
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">В ротації</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Пропущено</span>
                                        }
                                    }
                                    else
                                    {
                                        <form asp-action="ToggleTrackActive" method="post">
                                            <input type="hidden" name="queueId" value="@item.QueueId" />
                                            @if (item.IsActive)
                                            {
                                                <button type="submit" class="btn btn-sm btn-outline-warning">
                                                    <i class="bi bi-slash-circle"></i> Скіпнути
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-sm btn-outline-success">
                                                    <i class="bi bi-play-circle"></i> Відновити
                                                </button>
                                            }
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Плейлист порожній. Перейдіть у вкладку "Плейлист" щоб додати музику.</div>
    }

    <hr class="my-5" />
    <h3>Історія сесій</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Початок</th>
                <th>Кінець</th>
                <th>Тривалість</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stream in Model)
            {
                <tr>
                    <td>@stream.StartTime.ToLocalTime().ToString("g")</td>
                    <td>@(stream.EndTime.HasValue ? stream.EndTime.Value.ToLocalTime().ToString("g") : "-")</td>
                    <td>
                        @if (stream.EndTime.HasValue)
                        {
                            var duration = stream.EndTime.Value - stream.StartTime;
                            <span>@duration.ToString(@"hh\:mm") год</span>
                        }
                        else
                        {
                            <span class="text-success">Триває...</span>
                        }
                    </td>
                    <td>
                        @if (stream.EndTime == null)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Finished</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var startTimeStr = '@ViewBag.StreamStartTime';
        if (startTimeStr) {
            var startTime = new Date(startTimeStr);
            var timerElement = document.getElementById('liveTimer');
            function updateTimer() {
                var now = new Date();
                var diff = now - startTime;
                var totalSeconds = Math.floor(diff / 1000);
                var hours = Math.floor(totalSeconds / 3600);
                var minutes = Math.floor((totalSeconds % 3600) / 60);
                var seconds = totalSeconds % 60;
                var formattedTime =
                    (hours < 10 ? "0" + hours : hours) + ":" +
                    (minutes < 10 ? "0" + minutes : minutes) + ":" +
                    (seconds < 10 ? "0" + seconds : seconds);
                timerElement.innerText = formattedTime;
            }
            setInterval(updateTimer, 1000);
            updateTimer();
        }
    });
</script>
}