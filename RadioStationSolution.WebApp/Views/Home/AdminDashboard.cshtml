@{
    ViewData["Title"] = "Адмінка";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    .admin-dashboard {
        padding: 40px 20px;
        min-height: 80vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 24px;
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }

    .admin-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(12px);
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.4s ease;
        box, Hover-ефекти
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    }

    .admin-card:hover {
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        background: rgba(255, 255, 255, 0.25);
    }

    .card-header {
        padding: 24px 24px 0;
        font-size: 1.4rem;
        font-weight: 700;
    }

    .card-body {
        padding: 16px 24px 24px;
    }

    .card-icon {
        font-size: 3.5rem;
        opacity: 0.7;
        margin-bottom: 16px;
        display: block;
    }

    .btn-glow {
        padding: 12px 28px;
        border-radius: 50px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .btn-glow:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.3);
    }

    /* Кольори кнопок під кожну картку */
    .btn-users   { background: #ff6b6b; }
    .btn-stations{ background: #4ecdc4; }
    .btn-stats   { background: #45b7d1; }
    .btn-library { background: #f9ca24; color: #333 !important; }

    .btn-users:hover   { background: #ff5252; }
    .btn-stations:hover{ background: #42b7b0; }
    .btn-stats:hover   { background: #3298b8; }
    .btn-library:hover { background: #f5b91a; }
</style>

<div class="admin-dashboard">
    <div class="dashboard-grid">

        <!-- Користувачі -->
        <div class="admin-card text-white">
            <div class="card-header">
                <i class="bi bi-people-fill card-icon"></i>
                Керування користувачами
            </div>
            <div class="card-body">
                <p class="opacity-90 mb-4">Перегляд, блокування, редагування та видалення акаунтів</p>
                <a asp-controller="Admin" asp-action="ManageUsers" 
                   class="btn btn-users btn-glow text-white">Управління</a>
            </div>
        </div>

        <!-- Станції -->
        <div class="admin-card text-white">
            <div class="card-header">
                <i class="bi bi-broadcast-pin card-icon"></i>
                Радіостанції
            </div>
            <div class="card-body">
                <p class="opacity-90 mb-4">Додавання, редагування та видалення станцій</p>
                <a asp-controller="Admin" asp-action="ManageStations" 
                   class="btn btn-stations btn-glow text-white">Перейти</a>
            </div>
        </div>

        <!-- Статистика -->
        <div class="admin-card text-white">
            <div class="card-header">
                <i class="bi bi-graph-up-arrow card-icon"></i>
                Статистика
            </div>
            <div class="card-body">
                <p class="opacity-90 mb-4">Прослуховування, активність, топ треків</p>
                <a asp-controller="Admin" asp-action="ShowStats" 
                   class="btn btn-stats btn-glow text-white">Відкрити</a>
            </div>
        </div>

        <!-- Бібліотека -->
        <div class="admin-card text-white">
            <div class="card-header">
                <i class="bi bi-music-note-beamed card-icon"></i>
                Глобальна бібліотека
            </div>
            <div class="card-body">
                <p class="opacity-90 mb-4">Весь музичний архів проекту</p>
                <a asp-controller="Admin" asp-action="Library" 
                   class="btn btn-library btn-glow">
                   <i class="bi bi-folder-fill"></i> Відкрити архів
                </a>
            </div>
        </div>

    </div>
</div>