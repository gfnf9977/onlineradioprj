@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model IEnumerable<OnlineRadioStation.Domain.RadioStationEntity>
@{
    ViewData["Title"] = "Головна";
    var userId = HttpContextAccessor.HttpContext.Session.GetString("CurrentUserId");
    bool isLoggedIn = !string.IsNullOrEmpty(userId);
}
<style>
    :root {
        --primary: #ff2e63;
        --dark: #0f0f1e;
    }
    body { background: var(--dark); color: #fff; font-family: 'Inter', 'Segoe UI', sans-serif; }
    .hero {
        min-height: 100vh;
        background: radial-gradient(circle at top right, #1a1a2e 0%, #0f0f1e 70%);
        position: relative;
        display: flex;
        align-items: center;
    }
    .hero::before {
        content: '';
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background: url('/images/phone.png') no-repeat right 10% center / 45% auto;
        opacity: 0.25;
        pointer-events: none;
    }
    .logo-glow { filter: drop-shadow(0 0 30px rgba(255,46,99,0.6)); animation: float 6s ease-in-out infinite; }
    @@keyframes float { 0%,100% { transform: translateY(0); } 50% { transform: translateY(-15px); } }
    .glass-card {
        background: rgba(255,255,255,0.07);
        backdrop-filter: blur(16px);
        border: 1px solid rgba(255,255,255,0.12);
        border-radius: 24px;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }
    .glass-card::before {
        content: '';
        position: absolute;
        top: 0; left: 0; right: 0; height: 6px;
        background: var(--gradient);
        border-radius: 24px 24px 0 0;
    }
    .glass-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 25px 50px rgba(0,0,0,0.4);
    }
    .station-accent-1 { --gradient: linear-gradient(90deg, #ff6b6b, #feca57); }
    .station-accent-2 { --gradient: linear-gradient(90deg, #48dbfb, #0abde3); }
    .station-accent-3 { --gradient: linear-gradient(90deg, #1dd1a1, #10ac84); }
    .station-accent-4 { --gradient: linear-gradient(90deg, #ff9ff3, #c77dff); }
    .station-accent-5 { --gradient: linear-gradient(90deg, #feca57, #ff9ff3); }
    .station-accent-6 { --gradient: linear-gradient(90deg, #54a0ff, #2e86de); }
    .live-pulse {
        animation: pulse 2s infinite;
        background: #ff2e63;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8rem;
    }
    @@keyframes pulse { 0%,100% { opacity: 0.8; } 50% { opacity: 1; } }
    .btn-primary-custom {
        background: linear-gradient(45deg, var(--primary), #ff6b9d);
        border: none;
        border-radius: 50px;
        padding: 14px 32px;
        font-weight: 700;
        box-shadow: 0 10px 30px rgba(255,46,99,0.4);
        transition: all 0.3s;
    }
    .btn-primary-custom:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(255,46,99,0.6);
    }
    .section-title {
        font-weight: 900;
        background: linear-gradient(90deg, #ff2e63, #00d2d3);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    .phone-mockup {
        max-width: 380px;
        border-radius: 40px;
        box-shadow: 0 30px 60px rgba(0,0,0,0.5);
        border: 8px solid #111;
    }
</style>
<section class="hero position-relative">
    <div class="container position-relative z-3">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6 text-center text-lg-start">
                <img src="~/images/logo1.png" alt="Logo" class="img-fluid mb-4 logo-glow" style="max-height: 120px;">
                <h1 class="display-3 fw-bold mb-4">Твій ритм.<br><span style="color:#ff2e63;">Твоя хвиля.</span></h1>
                <p class="lead mb-5 opacity-90" style="font-size:1.3rem;">
                    Найкращі діджеї, прямі ефіри, голосування за треки — музика, яка слухає тебе.
                </p>
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center justify-content-lg-start">
                    @if (isLoggedIn)
                    {
                        <a asp-controller="Home" asp-action="Dashboard" class="btn btn-primary-custom btn-lg">
                            <i class="bi bi-speedometer2 me-2"></i> Кабінет
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Login" class="btn btn-primary-custom btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Увійти
                        </a>
                        <a asp-controller="Home" asp-action="Register" class="btn btn-outline-light btn-lg rounded-pill border-2">
                            Реєстрація
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-6 text-center mt-5 mt-lg-0">
                <img src="~/images/phone.png" alt="Radio на телефоні" class="img-fluid phone-mockup" style="transform: rotate(-8deg);">
            </div>
        </div>
    </div>
</section>
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title display-5">В ефірі зараз</h2>
            <p class="text-white-50">Обери свій вайб</p>
        </div>
        @if (Model != null && Model.Any())
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-5">
                @{ int index = 0; }
                @foreach (var station in Model)
                {
                    string accentClass = $"station-accent-{((index % 6) + 1)}";
                    index++;
                    <div class="col">
                        <div class="glass-card h-100 p-4 text-center @accentClass">
                            <div class="d-flex justify-content-center mb-4">
                                <div class="bg-white bg-opacity-10 rounded-circle p-4">
                                    <i class="bi bi-broadcast-fill" style="font-size: 3rem; color: rgba(255,255,255,0.9);"></i>
                                </div>
                            </div>
                            <h4 class="fw-bold mb-3">@station.StationName</h4>
                            <p class="small text-white-70 mb-4" style="min-height: 48px;">
                                @(string.IsNullOrEmpty(station.Description) ? "Тільки найкращі хіти 24/7" : station.Description)
                            </p>
                            <div class="d-flex justify-content-center gap-2 align-items-center mb-3">
                                <span class="live-pulse text-white">
                                    <i class="bi bi-dot"></i> LIVE
                                </span>
                            </div>
                            @if (isLoggedIn)
                            {
                                <a asp-controller="Home" asp-action="Dashboard"
                                   class="btn btn-light btn-lg rounded-pill w-100 fw-bold shadow-sm">
                                    <i class="bi bi-speedometer2 me-2"></i>
                                    В кабінет
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Home" asp-action="Login"
                                   class="btn btn-light btn-lg rounded-pill w-100 fw-bold shadow-sm">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>
                                    Слухати (Вхід)
                                </a>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-mic-mute-fill display-1 text-white-50"></i>
                <p class="mt-3 text-white-50">Поки що всі діджеї сплять... Скоро буде гучно!</p>
            </div>
        }
    </div>
</section>
<section class="py-5" style="background: linear-gradient(135deg, #16213e 0%, #0f3460 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 text-center">
                <img src="~/images/login.png" alt="Авторизація" class="img-fluid phone-mockup" style="transform: rotate(6deg);">
                <p class="mt-4 text-white-50">5 секунд — і ти в ефірі</p>
            </div>
            <div class="col-lg-7">
                <h2 class="section-title display-5 mb-5">Чому ми?</h2>
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="d-flex gap-3"><div class="bg-white bg-opacity-10 rounded-circle p-3 flex-shrink-0" style="width:64px;height:64px;"><i class="bi bi-file-earmark-music fs-3"></i></div><div><h5 class="fw-bold">Неймовірний звук</h5><p class="text-white-50">HLS до 224 kbps</p></div></div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex gap-3"><div class="bg-white bg-opacity-10 rounded-circle p-3 flex-shrink-0" style="width:64px;height:64px;"><i class="bi bi-phone-vibrate fs-3"></i></div><div><h5 class="fw-bold">Всюди з тобою</h5><p class="text-white-50">ПК, телефон, планшет</p></div></div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex gap-3"><div class="bg-white bg-opacity-10 rounded-circle p-3 flex-shrink-0" style="width:64px;height:64px;"><i class="bi bi-hand-thumbs-up fs-3"></i></div><div><h5 class="fw-bold">Ти впливаєш</h5><p class="text-white-50">Лайки/дизлайки = плейлист</p></div></div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex gap-3"><div class="bg-white bg-opacity-10 rounded-circle p-3 flex-shrink-0" style="width:64px;height:64px;"><i class="bi bi-people fs-3"></i></div><div><h5 class="fw-bold">Живі діджеї</h5><p class="text-white-50">Реальні люди, реальний вайб</p></div></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
