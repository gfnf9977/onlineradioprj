@model IEnumerable<OnlineRadioStation.Domain.RadioStationEntity>
@{
    ViewData["Title"] = "Моя сторінка";
    var savedIds = ViewBag.SavedStationIds as HashSet<Guid>;
}

<style>
    :root {
        --primary: #ff2e63;
        --accent: #08f5d8;
        --dark: #0f0f1e;
        --gray: #1a1a2e;
    }

    body {
        background: linear-gradient(135deg, #0f0f1e 0%, #16213e 100%);
        color: #fff;
        font-family: 'Inter', 'Segoe UI', sans-serif;
        min-height: 100vh;
    }

    .dashboard-header {
        text-align: center;
        padding: 60px 20px 40px;
    }

    .dashboard-header h1 {
        font-size: 3.5rem;
        font-weight: 900;
        background: linear-gradient(90deg, var(--primary), var(--accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 28px;
        padding: 20px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .station-card {
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(16px);
        border: 1px solid rgba(255, 255, 255, 0.12);
        border-radius: 24px;
        overflow: hidden;
        transition: all 0.4s ease;
        position: relative;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    .station-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 25px 50px rgba(255, 46, 99, 0.25);
    }

    .station-card::before {
        content: '';
        position: absolute;
        top: 0; left: 0; right: 0; height: 5px;
        background: linear-gradient(90deg, var(--primary), #ff9ff3);
        border-radius: 24px 24px 0 0;
    }

    .favorite-btn {
        position: absolute;
        top: 16px;
        right: 16px;
        background: rgba(255,255,255,0.15);
        border: none;
        border-radius: 50%;
        width: 48px;
        height: 48px;
        font-size: 1.4rem;
        color: #fff;
        cursor: pointer;
        transition: all 0.3s ease;
        z-index: 10;
        backdrop-filter: blur(10px);
    }

    .favorite-btn:hover {
        background: rgba(255,255,255,0.25);
        transform: scale(1.15);
    }

    .favorite-btn.filled {
        color: #ff2e63;
        background: rgba(255, 46, 99, 0.2);
        box-shadow: 0 0 20px rgba(255, 46, 99, 0.4);
    }

    .card-body {
        padding: 32px 28px 28px;
        text-align: center;
    }

    .card-body h3 {
        font-size: 1.6rem;
        font-weight: 700;
        margin-bottom: 12px;
    }

    .card-body p {
        color: rgba(255,255,255,0.7);
        font-size: 0.95rem;
        line-height: 1.5;
        margin-bottom: 20px;
    }

    .btn-listen {
        background: linear-gradient(45deg, var(--primary), #ff6b9d);
        border: none;
        border-radius: 50px;
        padding: 14px 32px;
        font-weight: 700;
        font-size: 1.1rem;
        width: 100%;
        box-shadow: 0 10px 30px rgba(255, 46, 99, 0.4);
        transition: all 0.3s ease;
    }

    .btn-listen:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(255, 46, 99, 0.6);
    }

    .no-stations {
        text-align: center;
        padding: 80px 20px;
        color: rgba(255,255,255,0.5);
    }

    .no-stations i {
        font-size: 5rem;
        margin-bottom: 20px;
        opacity: 0.3;
    }
</style>

<!-- HEADER -->
<div class="dashboard-header">
    <h1>Моя сторінка</h1>
    <p class="lead text-white-50">Твої улюблені станції в одному місці</p>
</div>

@if (Model != null && Model.Any())
{
    <div class="dashboard-grid">
        @foreach (var station in Model!)
        {
            bool isSaved = savedIds != null && savedIds.Contains(station.StationId);

            <div class="station-card">
                <button class="favorite-btn @(isSaved ? "filled" : "")"
                        data-station-id="@station.StationId"
                        onclick="toggleFavorite(this, '@station.StationId')">
                    <i class="bi @(isSaved ? "bi-heart-fill" : "bi-heart")"></i>
                </button>

                <div class="card-body">
                    <h3>@station.StationName</h3>
                    <p>
                        @(string.IsNullOrEmpty(station.Description)
                            ? "Найкраща музика без зупинки..."
                            : station.Description)
                    </p>

                    <a asp-controller="Home" 
                       asp-action="Listen" 
                       asp-route-id="@station.StationId" 
                       class="btn btn-listen">
                        <i class="bi bi-play-circle-fill me-2"></i>
                        Слухати ефір
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="no-stations">
        <i class="bi bi-broadcast"></i>
        <h3>Тут поки що тихо...</h3>
        <p>Немає активних станцій. Але скоро буде гучно!</p>
    </div>
}

<form id="csrf-form" style="display:none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function toggleFavorite(button, stationId) {
            const icon = button.querySelector('i');
            
            fetch('/Home/ToggleFavorite?stationId=' + stationId, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('#csrf-form input').value
                }
            })
            .then(response => {
                if (response.status === 401) {
                    alert("Сесія закінчилась. Увійдіть знову.");
                    window.location.href = "/Home/Login";
                    return;
                }
                return response.json();
            })
            .then(data => {
                if (data && data.isSaved !== undefined) {
                    if (data.isSaved) {
                        button.classList.add('filled');
                        icon.classList.replace('bi-heart', 'bi-heart-fill');
                    } else {
                        button.classList.remove('filled');
                        icon.classList.replace('bi-heart-fill', 'bi-heart');
                    }
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Щось пішло не так. Спробуй ще раз.');
            });
        }
    </script>
}